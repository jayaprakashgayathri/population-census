    <script>
        document.addEventListener("DOMContentLoaded", function () {
            var map = L.map('map', {
                center: [20.5937, 78.9629],
                zoom: 5,
                zoomControl: true,
                preferCanvas: true
            });
            L.tileLayer('https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png', {
                attribution: '&copy; OpenStreetMap contributors',
                maxZoom: 18,
            }).addTo(map);
            var heatData = [
                [28.7041, 77.1025, 1],
                [19.0760, 72.8777, 0.9],
                [13.0827, 80.2707, 0.8],
                [22.5726, 88.3639, 0.7],
                [12.9716, 77.5946, 0.8],
                [25.3176, 82.9739, 0.6],
                [26.9124, 75.7873, 0.6]
            ];
            var heat = L.heatLayer(heatData, {
                radius: 25,
                blur: 15,
                maxZoom: 10,
                minOpacity: 0.4
            }).addTo(map);
        });
    </script>
